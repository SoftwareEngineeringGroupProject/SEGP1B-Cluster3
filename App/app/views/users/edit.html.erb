<h1>Edit User Details for: <%= @user.username %></h1>
 
<%= form_for :user, url: :update_user_path, method: :patch do |f| %>
	<% if @user.errors.any? %>
		<div id="error_explanation">
		<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being modified:</h2>
    	<ul>
    		<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
    	</ul>
		</div>
	<% end %>

	<p>
	<%= f.label :username %><%= f.text_field :username %>
	</p>
 
	<p>
    	<%= f.label :email %><%= f.text_field :email %>
	</p>
  
	<p>
		<%= f.label "Set New Password" %><%= f.password_field :password %>
	</p>
  
	<p>
    <%= f.label "Confirm New Password" %><%= f.password_field :password_confirmation %>
	</p>
 
	<p>
	<%= f.submit %>
	</p>
<% end %>
 
<%= link_to 'Back', :list_all_path %>