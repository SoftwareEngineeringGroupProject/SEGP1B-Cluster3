<%= render "shared/header" %>
<%= render "shared/linkbar" %>
<%= render "shared/dashheader" %>
<%= render "shared/profilesidebar" %>

<div id="container" class="to_left">
  <div id="new_board_showing" class="shadow">  
      <div class="titles">
        <font color="#B38808"><h1 class="centerHead">PPMS User Management</h1></font>
      </div>
      
    <div class="project_list">
   		<table >
  		<thead><tr><th>Account Type</th><th>Username</th><th>Full Name</th><th>Email</th><th colspan="3">Actions</th></tr></thead>

      <tbody>
 		<% @users.each do |user| %>
    		<tr>
    		<td><%= user.acctype %></td>
				<td><%= user.username %></td>
				<td><%= user.fname %> <%= user.lname %></td>
				<td><%= user.email %></td>
				<td><strong><%= link_to 'Details', controller: "users", action: "show", id: user.id %></strong></td>
				<td><strong><%= link_to 'Edit', controller: "users", action: "edit", id: user.id %></strong></td>
				<% if user.id != @current_user.id %>
					<td><strong><%= link_to 'Delete User', controller: "users", action: "destroy", id: user.id,
                    	method: :delete, :confirm => 'Are you sure you want to delete this user\'s account?' %></strong></td>
                <% end %>
    		</tr>
  		<% end %>
      </tbody>

		</table>
    <br>
    <br>
	</div>

  </div>
</div>
