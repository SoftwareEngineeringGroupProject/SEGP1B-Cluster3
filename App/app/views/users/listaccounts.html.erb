<%= render "shared/header" %>
<%= render "shared/linkbar" %>
<%= render "shared/profilesidebar" %>

<div id="container" class="to_left shadow">
	<div class="profilemain forms flex_height">
      <div class="titles">
        <h1 class="centerHead">PPMS User Management</h1>
      </div>
      
    <div id="listusersdiv">
   		<table id="listuserstable">
  		<tr><th>Account Type</th><th>Username</th><th>Full Name</th><th>Email</th><th colspan="2"></th></tr>
 		<% @users.each do |user| %>
    		<tr>
    			<td><%= user.acctype %></td>
				<td><%= user.username %></td>
				<td><%= user.fname %> <%= user.lname %></td>
				<td><%= user.email %></td>
				<td><%= link_to 'Details', controller: "users", action: "show", id: user.id %></td>
				<td><%= link_to 'Edit', controller: "users", action: "edit", id: user.id %></td>
				<% if user.id != @current_user.id %>
					<td><%= link_to 'Delete User', controller: "users", action: "destroy", id: user.id,
                    	method: :delete, :confirm => 'Are you sure you want to delete this user\'s account?' %></td>
                <% end %>
    		</tr>
  		<% end %>
		</table>
	</div>
  </div>
</div>