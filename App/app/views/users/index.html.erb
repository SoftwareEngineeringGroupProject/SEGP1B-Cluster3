<h1>PPMS User Management</h1>


<%= link_to 'Create New User', controller: "users", action: "new" %>
<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th colspan="2"></th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
		<td><%= user.username %></td>
		<td><%= user.email %></td>
		<td><%= link_to 'Show', controller: "users", action: "show", id: user.id %></td>
		<td><%= link_to 'Edit', controller: "users", action: "edit", id: user.id %></td>
		<td><%= link_to 'Destroy', controller: "users", action: "destroy", id: user.id,
                    method: :delete, data: { confirm: 'Are you sure you want to delete this user\'s account?' } %></td>
    </tr>
  <% end %>
</table>