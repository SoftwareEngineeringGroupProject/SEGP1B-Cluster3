<h1>User Management</h1>

<%= link_to 'Create New User', new_user_path %>
<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th colspan="2"></th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
		<td><%= user.username %></td>
		<td><%= user.email %></td>
		<td><%= link_to 'Show', user_path(user) %></td>
		<td><%= link_to 'Edit', edit_user_path(user) %></td>
		<td><%= link_to 'Destroy', user_path(user),
                    method: :delete, data: { confirm: 'Are you sure you want to delete this user\'s account?' } %></td>
    </tr>
  <% end %>
</table>