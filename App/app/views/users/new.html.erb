<%= render "shared/header" %>

  <div id="ProfileSetting" class=" forms flex_height">
    <%= form_for :user, :url => {:controller => 'users', :action => 'create'}  do |f| %>
      <div class="titles">
        <h3>Industry Partner Signup</h3>
      </div>

      <% if flash[:notice] %>
  		<li><font color="black"><%= flash[:notice] %></font></li>
	    <% end %>

      <!-- Error display -->
      <% if @user.errors.any? ||  @company.errors.any?   %>
        <ul class="Signup_Errors">
    	  <% for message_error in @user.errors.full_messages %>
      	<li>* <%= message_error %></li>
    	   <% end %>
      <% end %>

      <fieldset class="inputs">
        <legend>User details</legend>
        <%= f.hidden_field :acctype, :value => "industry" %>
    	  <%= f.text_field :username, "placeholder" => "Username" %>
    	  <%= f.text_field :fname, "placeholder" => "First Name" %>
    	  <%= f.text_field :lname, "placeholder" => "Last Name" %> </p>
    	  <%= f.text_field :email, "placeholder" => "Email" %> </p>
    	  <%= f.password_field :password, "placeholder" => "Password" %></p>
    	  <%= f.password_field :password_confirmation, "placeholder" => "Password Confirmation"  %> </p>
      </fieldset>

    <% if @user.errors.any? ||  @company.errors.any?   %>
      <ul class="Signup_Errors">
      <% for message_error in @company.errors.full_messages %>
      <li>* <%= message_error %></li>
      <% end %>
      </ul>
    <% end %>

	  <fieldset class="inputs">
      <legend>Company details</legend>
        <%=fields_for @company do |c| %>
          <%=c.text_field :name, "placeholder" => "Company name" %>
          <%=c.text_field :address, "placeholder" => "Company Address" %>
          <%=c.text_field :phone, "placeholder" => "Contact Phone Number" %>
          <%=c.text_field :website, "placeholder" => "Company Website" %>
        <% end %>
      </fieldset>

      <div id="subBtn" class="button horizontal_list to_right" >
        <ul>
          <li><%= link_to "Cancel", root_path %></li>
          <li><%= f.submit "Continue" %></li>
        </ul>
      </div>
    <% end %>

  </div>
