<%= render "shared/header" %>
<%= render "shared/dashheader" %>

<!--##############################################################-->
<div class="wrapper content">

  <%= render "shared/statussidebar" %>

  <!-- Middle board -->
  <div id="container" class="to_left">
     <div id="new_board_showing" class="flex_height shadow">
    <% if @student1.errors.any? || @student2.errors.any? || @student3.errors.any?%>
      <ul class="Signup_Errors">
      <% for message_error in @student1.errors.full_messages %>
        <li><%= message_error %></li>
      <% end %>
      <% for message_error in @student2.errors.full_messages %>
        <li><%= message_error %></li>
      <% end %>
      <% for message_error in @student3.errors.full_messages %>
        <li><%= message_error %></li>
      <% end %>
      </ul>
    <% end %>
    <%= form_tag "", :multipart => true %>
    <%= hidden_field_tag "project_id", @project.id %>
    <fieldset>
      <legend>Assign Project to Students</legend>
      <label>Group Name<%= text_field_tag :group_name,@group_name, "placeholder"=>"Group name" %></label>
      <label>Message for students<%= text_area_tag :message, params[:message], "placeholder" => "message" %></label>
      <p>Here is project specification link. Copy and paste to the message if wish!</p>
      <%=text_field_tag :spec_link, @spec_link, "readonly"=>"true"%>
      <p>Enter StudentIDs</p>
      <label>Student 1<%= text_field_tag :student1,@student1.studentID, "placeholder" => "axxxxxxx" %></label>
      <label>Student 2<%= text_field_tag :student2,@student2.studentID, "placeholder" => "axxxxxxx" %></label>
      <label>Student 3<%= text_field_tag :student3,@student3.studentID, "placeholder" => "axxxxxxx" %></label>
    </fieldset>
    
  <!--*********************-->
  <div id="action_to_showing_board" class="horizontal_list button" >
      <ul>
        <li><%= submit_tag 'Assign' %></li>
        <li><%= submit_tag 'Cancel' %></li>
      </ul>
  </div>
</div>
</div>
<%= render "shared/projectmanipsidebar" %>
</div>