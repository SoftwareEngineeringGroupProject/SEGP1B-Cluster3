    <div class="wrapper banner">
    <div id="top_bar" class="flex_height">
      <div class="to_left">
        <h1>University of Adelaide</h1>
      </div>

      <div id="login_buttons" class="button horizontal_list to_right">
        <ul>
          <li><%= link_to "Login", login_path %></li>
          <li><%= link_to "Register", signup_path %></li>
        </ul>
      </div>
    </div>
  </div>

  <!--########################################################-->
  <%= form_tag(:login, class: "forms flex_height", id: "login") do %>
      <div class="titles">
        <h3>Login</h3>
        <!--message flash up-->
        <% if flash[:notice] %>
    		<div class="notice"><%= flash[:notice] %></div>
  		<% end %>
      </div>
      <div class="inputs">
        <input type="text" placeholder="Reference number" autofocus />
        <div id="separator">or</div>
        <%= text_field_tag :username_or_email,params[:username_or_email],"placeholder" => "Username/Email" %>
        <%= password_field_tag :login_password,params[:login_password], "placeholder" => "Password" %>
      </div>
      <div id="subBtn" class="button horizontal_list to_right">
        <ul>
          <li><%= submit_tag "LOG IN" %></li>
          <li><%= link_to "BACK", root_path %></li>
        </ul>
      </div>
  <% end %>
