<%= render "shared/header" %>
<%= render "shared/dashheader" %>
<!--############################## MAIN BODY ################################-->
<div class="wrapper content">

  <!-- Left navigation -->
  <div class="aside_cols to_left">
    <div id="tabs" class="to_right vertical_list button">
      <ul>
        <li><%=link_to "Newly submitted",admin_dashboard_path,:state => "new" %></li>
        <li><%=link_to "Accepted", admin_dashboard_path, state: "accepted"  %></li>
        <li><%=link_to "Rejected", admin_dashboard_path, state: "rejected" %></li>
        <li><%=link_to "Pending", admin_dashboard_path, state: "pending" %></li>
        <li><%=link_to "Past projects", admin_dashboard_path, state: "past_projects" %></li>
      </ul>
    </div>
  </div>

  <!-- Middle board -->
  <div id="container" class="to_left">
    <!-- Viewing Project Board -->
    <div id="board_showing" class="general_box flex_height shadow">
      <div style="height:300px; overflow: auto;">

      <% if !@messages.blank? %>
      <% @messages.each do |m| %>
        <div class="user_message inset_shadow">
        <% sender = User.find(m.sender_id) %>
        <strong>&nbsp&nbsp&nbspSender:&nbsp<%= sender.lname %>&nbsp-&nbspTitle:&nbsp<%=m.title %></strong>
        <textarea rows="2" readonly><%=m.text %></textarea>
        </div>
      <% end %>
      <% else %>
        <div class="user_message inset_shadow">
        <strong>&nbsp&nbsp&nbsp No messages currently.</strong>
        </div>
      <% end %>

      </div>
    </div>

    <%= form_tag "", :multipart => true %>
    <!-- Mailing panel-->
      <div id="communication" id="general_box" class="flex_height to_right shadow">

        <!-- Message box -->
		    <div id="message_box" class="to_left">
          <input class="to_left" type="text" placeholder="Subject:", name ="subject" >
          <%= text_field_tag '',@email , "id"=>"mail_address", "class" => "to_right" %>
          <%= text_area_tag 'email' %>
        </div>

        <!-- Buttons to apply operations on message -->
  		  <div id="action_to_message" class="to_right vertical_list button">
          <ul>
            <li><a id="uploadFile" href="#">Attach</a><%=file_field_tag 'attachment', {"id" => "uploadBtn"} %></li>
            <li><%= submit_tag 'Send' %></li>
          </ul>
        </div>

      </div>

  </div>

  <div class="aside_cols to_left">
    <div id="cart" class="to_right vertical_list button">
      <ul>
        <li><%=link_to "Edit Details", edit_details_path(id: @project.id )%></li>
        <li><%=link_to "Make Decision", project_manip_path(id: @project.id, show_action: true) %></li>
        <li><%=link_to "Message Log", show_messages_path(id: @project.id ) %></li>
        <li><%=link_to "Spec Editor", admin_edit_project_path(id: @project.id) %></li>
        <li><%=link_to "Assign Team", admin_assign_student_path(project_id: @project.id )%></li>
      </ul>
    </div>
  </div>

</div>
