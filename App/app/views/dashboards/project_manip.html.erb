<%= render "shared/header" %>
<%= render "shared/dashheader" %>
<!--############################## MAIN BODY ################################-->
<div class="wrapper content">

  <%= render "shared/statussidebar" %>

  <!-- Middle board -->
  <div id="container" class="to_left">
    <!-- Viewing Project Board -->
    <div id="board_showing" class="general_box flex_height shadow">
        <div class="flex_height">
          <div id="action_to_showing_board" class="to_right horizontal_list button">
          <% if @show_action%>
            <ul>
            <% if @state == "new" %>
              <li><%= submit_tag 'Accept' %></li>
              <li><%= submit_tag 'Reject' %></li>
              <li><%= submit_tag 'Suspend' %></li>
            <% end%>

            <% if @state == "accepted" %>
              <li><%= submit_tag 'Suspend' %></li>
              <li><%= submit_tag 'Add To Cart' %></li>
            <% end%>

            <% if @state == "rejected" || @state == nil %>
              <li><%= submit_tag 'Remove' %></li>
              <li><%= submit_tag 'Suspend' %></li>
            <% end%>

            <% if @state == "pending" %>
              <li><%= submit_tag 'Accept' %></li>
              <li><%= submit_tag 'Reject' %></li>
            <% end%>

              <% if @state == "past_projects" %>
              <li><%= submit_tag 'Accept' %></li>
              <li><%= submit_tag 'Reject' %></li>
            <% end%>
          <% end %>

            </ul>
          </div>
        </div>

      <div class="flex_height">
        <div class="project_item">
          <h1><%=link_to @project.title, project_manip_path(@project) %></a></h1>
          <div><%=@project.body %></div>
        </div>
      </div>
    </div>
  </div>

  <%= render "shared/projectmanipsidebar" %>

</div>
