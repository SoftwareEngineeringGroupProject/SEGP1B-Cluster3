<h1>Add a new post </h1>

<%= form_for @post do |f| %>
  <p>
  	<%= f.label :title %> <br />
  	<%= f.text_field :title %>
  </p>

  <p>
  	<%= f.label :body %> <br />
  	<%= f.text_area :body %>
  </p>

  <p>
  	<%= f.select :category_id, @category.collect{|x|  [x.name, x.id]}, {:include_blank => "Select one" }%> 
  	<br />
  </p>

  <p>
  	<%= f.submit "Add Post" %>
  </p>

<% end %>